
<% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= t('common.errors') %></h5>
      <ul>
        <% @task.errors.full_messages.each do |message|  %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<%= form_for @task, url: task_add_response_path(@task),  html: { multipart: true }  do |f| %>
        <div class="form-group">
          <%= fields_for @response do |l| %>
      <%= l.label :responses %>
      <%= l.text_area :response_text, presence: false, placeholder: "Введите текст", class: 'form-control' %>
       <p>
              <%= l.text_field :performer_price, placeholder: "Предложите свою цену", class: 'form-control' %>

              </div>
      <div class="form-group">
            <%= l.submit "Отправить отклик", class: 'btn btn-primary' %>

      </div>
<% end %>
<% end %>