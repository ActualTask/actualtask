<article class="task">
  <section class="task-head">
    <h1><%= @task.title %></h1>

    <p align="right"><%= @task.price %> руб</p>

    <small>
      <%= task_info @task %>
      >
    </small>
  </section>

  <% if @task.user_id!=current_user.id %>

  <%=render 'responses' %>

      <% end %>

  <% if @task.performer_id==current_user.id %>
  <h2>Dsbcполнитель</h2>

<% end %>

  <section class="post-body">
    <%= @task.body.html_safe %>
  </section>
</article>
