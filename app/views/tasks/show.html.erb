<article class="task">
  <section class="task-head">
    <h1><%= @task.title %></h1>


    <div class="map">
      <%= task_map @task %>
    </div>

    <p align="right"><%= @task.price %> руб</p>

    <small>
      <%= task_info @task %>

    </small>
  </section>

  <% if @task.user_id!=current_user.id %>

  <%=render 'responses' %>

      <% end %>

  <% if @task.performer_id==current_user.id %>

<% end %>

  <section class="post-body">
    <%= @task.body.html_safe %>
  </section>
</article>
