
<%= form_for [:admin, @moderator] do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <%= fields_for(:user) do |u|%>
    <div class="form-group">
    <%= u.label :email %><br />
      <%= u.email_field :email, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= u.label :password %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= u.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>
    <% end %>

<div class="form-group">
  <%= f.submit t('.submit', action: @moderator.new_record? ? t('common.create') : t('common.edit')), class: 'btn btn-primary' %>
  <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
</div>
<% end %>