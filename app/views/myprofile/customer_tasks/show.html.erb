<article class="task">
  <section class="task-head">
    <h1><%= @task.title %></h1>
    <p align="right"><%= @task.price_max %></p>

    <small>
      <time><%= @task.created_at.to_date.strftime("%d %B, %Y") %></time>
      <% if @task.category.present? %>
          |
          <%= link_to @task.category.name, @task.category %>
      <% end %>
      <% if user_signed_in? && current_user.id==@task.user_id %>
          |
          <%= link_to 'Изменить', edit_myprofile_customer_task_path(@task) %>
          |
          <%= link_to 'Удалить', myprofile_customer_task_path(@task), method: :delete, data: { confirm: 'Вы уверены?' } %>
      <% end %>
    </small>
  </section>





  <section class="post-body">
    <%= @task.body.html_safe %>
  </section>

</article>


<article class="input">

  <h2>Отклики</h2>
        <selection class="task-input">
  <% @task.response_lists.each_with_index do |res, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= link_to res.user.info.name+' '+res.user.info.surname, info_path(res.user.info)  %></td>
            <div><%= res.response_text %></div>
          </tr>
        </selection>
</article>
    <div class="form-group">
      <%= link_to 'Принять', myprofile_customer_task_accept_response_path(@task,:response => {:id => res}), :method => :put, class: 'btn btn-primary' %>
      <%= link_to 'Отклонить', myprofile_customer_task_decline_response_path(@task,:response => {:id => res}), :method => :put, class: 'btn btn-outline-secondary' %>
    </div>

  <% end %>

